---
import { Image } from "astro:assets";
import SouthVanWhiteLogo from "../images/southvanLogo.svg";
import { Icon } from "astro-icon/components";
---

<section class="stack site-map">
  <div class="mini-logo-box">
    <Image
      src={SouthVanWhiteLogo}
      alt="South Van FC Team Crest"
      class="mini-logo"
      loading="lazy"
    />
    <h2>Building confident, skilled, and intelligent players.</h2>
  </div>
  <div class="stack content-box">
    <div>
      <h3>Follow Us</h3>
      <a
        href="https://www.instagram.com/southvanfc"
        aria-label="Visit our instagram page"
        target="_blank"
        rel="noopener noreferrer"
      >
        <Icon name="insta" size={50} />
      </a>
    </div>
    <div>
      <h3>Quick Links</h3>
      <div class="stack link-box">
        <a href="/" aria-label="Navigate to the about us page">Home</a>
        <a href="/academy" aria-label="Navigate to the about us page">Academy</a
        >
        <a href="/our-coaches" aria-label="Navigate to the our coaches page"
          >Our Coaches</a
        >
        <a
          href="/academy/player-evaluation"
          aria-label="Navigate to the our coaches page"
          >Request Youth Evaluation</a
        >
        <a
          href="/mens-team-application"
          aria-label="Navigate to the our coaches page"
          >Register for Men's Training Squad</a
        >
      </div>
    </div>

    <div>
      <h3>Contact Us</h3>
      <div class="link-box">
        <p>southvanfc@gmail.com</p>
      </div>
    </div>
  </div>
</section>

<style>
  .site-map {
    text-align: left;
    align-items: flex-start;
    color: white;
    background-color: #013478;
    padding: 20px;
  }
  .link-box {
    gap: 20px;
    margin: 20px 10px;
  }

  a {
    color: white;
  }

  .mini-logo-box {
    display: flex;
    align-items: center;
    gap: 10px;
    margin-bottom: 30px;
    margin-top: 30px;
  }

  .mini-logo {
    height: 100px;
    width: auto;
  }

  @media screen and (min-width: 800px) {
    .site-map {
      gap: 20px;
    }
    .content-box {
      display: flex;
      flex-direction: row;
      align-items: baseline;
      justify-content: space-around;
      width: 100%;
    }

    .mini-logo {
      height: 125px;
    }
  }
</style>
