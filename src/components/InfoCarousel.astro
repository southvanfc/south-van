---
/**
 * Usage:
 * <InfoCarousel>
 *   <section>...</section>
 *   <section>...</section>
 * </InfoCarousel>
 */
---

<section class="carousel" aria-roledescription="carousel">
  <div class="carousel__viewport">
    <slot />
  </div>
</section>

<style>
  .carousel {
    width: 100%;
    max-width: 1200px;
    margin-inline: auto;
  }

  .carousel__viewport {
    display: flex;
    gap: 10px;
    overflow-x: auto;
    scroll-snap-type: x mandatory;
    scroll-behavior: smooth;
    padding: 1rem 0;
    align-items: stretch;
    min-width: 0;
  }

  .carousel__viewport > * {
    min-width: 0;
  }

  /* Hide scrollbar */
  .carousel__viewport {
    scrollbar-width: none;
  }
  .carousel__viewport::-webkit-scrollbar {
    display: none;
  }

  /* === Desktop: static layout === */
  @media (min-width: 768px) {
    .carousel__viewport {
      overflow-x: visible;
      scroll-snap-type: none;
      scroll-behavior: auto;
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
      gap: 10px;
    }
  }
</style>
