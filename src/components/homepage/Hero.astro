---
import Image from "astro/components/Image.astro";

const { pageTitle, bannerImage, tagline } = Astro.props;
---

<section class="hero">
  <Image
    src={bannerImage}
    alt="Hero banner"
    class="hero-img"
    widths={[480, 768, 1024, 1440, 1920]}
    loading="eager"
    decoding="async"
    priority
  />
  <div class="overlay">
    <div class="content">
      <h1>
        {pageTitle}
      </h1>
      <p class="tagline">
        {tagline}
      </p>
    </div>
  </div>
</section>

<style>
  /* hero section */
  .hero {
    position: relative;
    width: 100%;
    height: 50vh;
    background-color: black;
  }

  .tagline {
    font-size: 22px;
    font-weight: 600;
  }

  .hero-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    opacity: 0.6;
  }

  .overlay {
    position: absolute;
    inset: 0;
    color: white;
    padding: 0 10px;
    display: flex;
    flex-direction: column;
    padding: 50px 30px;
  }

  .content {
    display: flex;
    flex-direction: column;
    gap: 30px;
  }

  .cta-links {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .cta-link {
    color: white;
    font-size: 16px;
    font-weight: bold;
  }

  .cta {
    border: 4px solid white;
    padding: 20px;
    border-radius: 20px;
  }
</style>
