---
const { pageTitle, bannerImage, tagline } = Astro.props;
---

<section class="hero">
  <img
    src={bannerImage}
    alt="Hero banner"
    class="hero-img"
    sizes="(max-width: 640px) 92vw, (max-width: 1024px) 90vw, 1200px"
    loading="eager"
    decoding="async"
    fetchpriority="high"
  />
  <div class="overlay">
    <div class="content">
      <h1>
        {pageTitle}
      </h1>
      <p class="tagline">
        {tagline}
      </p>
    </div>
    <slot name="cta" />
  </div>
</section>

<style>
  /* hero section */
  .hero {
    position: relative;
    width: 100%;
    height: 50vh;
    background-color: black;
  }

  .tagline {
    font-size: 22px;
    font-weight: 600;
  }

  .hero-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    opacity: 0.6;
  }

  .overlay {
    position: absolute;
    inset: 0;
    color: white;
    padding: 60px 40px;
    display: flex;
    flex-direction: column;
  }

  .content {
    display: flex;
    flex-direction: column;
    gap: 30px;
    height: 100%;
  }
</style>
