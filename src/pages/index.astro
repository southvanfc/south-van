---
import BaseLayout from "../layouts/BaseLayout.astro";
import "../styles/home.css";
import BannerImage from "../images/bannerImage.jpg";
import Faq from "../components/Faq.astro";
import Hero from "../components/Hero.astro";

const pageTitle: string = "South Van FC";
const tagline: string = "Built by the Community. Developed for the Game.";

const seo = {
  title: "SouthVan FC | Vancouver Football Club & Development Academy",
  description:
    "SouthVan FC is a community-built club in Vancouver with an Open Men's team and a technical first Development Academy focused on movement and game intelligence.",
  canonical: "/",
  ogImage: "/og/home.png", // optional: make sure this exists in /public/og/home.jpg
};
---

<BaseLayout pageTitle={pageTitle} seo={seo}>
  <Hero pageTitle={pageTitle} bannerImage={BannerImage} tagline={tagline} />
  <div class="info-box row">
    <section class="stack cta-div" aria-labelledby="mens-program-heading">
      <h2 id="mens-program-heading">Open Men's Team</h2>
      <p>
        Founded in 2023, the South Van FC Div 4 Men's team is driven by
        ambition. We compete with intent, train to improve, and hold ourselves
        to standards that lead to results. Every season, our objective remains
        the same to build a winning squad, earn promotion, and keep moving
        forward.
      </p>
      <a href="/mens-team-application" class="program-cta"
        >Apply for the Men's Squad</a
      >
    </section>
    <section class="stack cta-div" aria-labelledby="academy-heading">
      <h2 id="academy-heading">Academy</h2>
      <p>
        Our Development Academy is the foundation of South Van FC, built for
        players committed to learning, hard work, and long-term development. We
        focus on technical quality, movement, and game understanding to prepare
        players for a successful youth career.
      </p>
      <a href="/academy" class="program-cta">View Academy</a>
    </section>
  </div>
  <Faq />
</BaseLayout>

<style>
  .info-box {
    margin-bottom: 40px;
  }
  .tagline {
    font-weight: 600;
  }

  .cta-div {
    align-items: center;
    padding: 30px;
    gap: 15px;
    background-color: white;
    border-radius: 12px;
    max-width: 450px;
    justify-content: space-between;
    text-align: left;
    box-shadow:
      0px 0px 0px #00000000,
      0px 2px 4px #01347814;
  }

  .program-cta {
    background-color: #013478;
    padding: 14px 10px;
    border-radius: 20px;
    color: white;
    width: 80%;
    text-align: center;
  }

  @media screen and (min-width: 900px) {
    .row {
      flex-direction: row;
      align-items: stretch;
      justify-content: center;
      gap: 60px;
    }
  }
</style>
