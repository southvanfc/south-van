---
import Image from "astro/components/Image.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
import BannerImage from "../images/banner-image.webp";
import { Icon } from "astro-icon/components";

const pageTitle: string =
  " South Van FC Development Academy | Elite Youth Soccer Training in Vancouver";
---

<BaseLayout pageTitle={pageTitle}>
  <section class="hero">
    <Image
      src={BannerImage}
      alt="Hero banner"
      class="hero-img"
      sizes="100vw"
      loading="eager"
      decoding="async"
      priority
    />
    <div class="overlay">
      <h1>
        {pageTitle}
      </h1>
      <p class="caption">
        Building confident, skilled, and intelligent soccer players through
        professional coaching and long-term development.
      </p>
    </div>
  </section>
  <section class="why-us">
    <h2>Why South Van FC Development Academy?</h2>
    <div class="card">
      <Icon name="targetArrow" size={40} />
      <h3>Player-First Development</h3>
      <p>
        Our philosophy centers on the individual player, fostering growth both
        on and off the field.
      </p>
    </div>
    <div class="card">
      <Icon name="people" size={40} />
      <h3>Licensed & Experienced Coaches</h3>
      <p>
        Our philosophy centers on the individual player, fostering growth both
        on and off the field.
      </p>
    </div>
    <div class="card">
      <Icon name="shieldCheck" size={40} />
      <h3>Age-Appropriate Training Curriculum</h3>
      <p>
        Our philosophy centers on the individual player, fostering growth both
        on and off the field.
      </p>
    </div>
    <div class="card">
      <Icon name="medal" size={40} />
      <h3>Pathway to Competitive Soccer</h3>
      <p>
        Our philosophy centers on the individual player, fostering growth both
        on and off the field.
      </p>
    </div>
  </section>
</BaseLayout>

<style>
  h1 {
    font-size: 36px;
    line-height: 2.75rem;
    font-weight: bold;
  }

  .why-us {
    padding: 20px;
    display: flex;
    flex-direction: column;
    gap: 10px;
    text-align: center;
    align-items: center;
  }

  .card {
    padding: 10px;
    padding-bottom: 30px;
    border-bottom: 2px solid black;
    display: flex;
    flex-direction: column;
    gap: 20px;
    align-items: center;
  }

  h2 {
    font-size: 20px;
    line-height: 1.75rem;
    font-weight: bold;
  }

  h3 {
    font-weight: bold;
  }

  .caption {
    font-size: 18px;
    line-height: 1.9rem;
    font-weight: 400;
  }

  p {
    width: 300px;
  }

  .hero {
    position: relative;
    width: 100%;
    height: calc(100vh - var(--header-height));
    overflow: hidden;
    height: 100svh;
  }

  .hero-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .overlay {
    position: absolute;
    inset: 0;
    display: grid;
    top: 100px;
    color: white;
    text-align: left;
    padding: 20px;
    display: flex;
    flex-direction: column;
    gap: 20px;
  }
</style>
