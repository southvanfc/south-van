---
import BaseLayout from "../../layouts/BaseLayout.astro";
import BannerImage from "../../images/hero-image.jpg";
import Evaluation from "../../components/Evaluation.astro";
import Hero from "../../components/Hero.astro";
import HowWeWork from "../../components/HowWeWork.astro";
import ProgramCarousel from "../../components/ProgramCarousel.astro";
import StartPlayerDev from "../../components/StartPlayerDev.astro";

const pageTitle: string =
  " South Van FC Development Academy | Elite Youth Soccer Training";

const tagline: string =
  "Building confident, skilled, and intelligent soccer players through professional coaching and long-term development.";
---

<BaseLayout pageTitle={pageTitle}>
  <Hero pageTitle={pageTitle} bannerImage={BannerImage} tagline={tagline}>
    <a href="/academy/player-evaluation" slot="cta" class="learn-more-link"
      >Request Player Evaluation</a
    >
  </Hero>
  <HowWeWork />
  <ProgramCarousel />
  <Evaluation />
  <StartPlayerDev />
</BaseLayout>

<style>
  .learn-more-link {
    background-color: rgba(1, 52, 120, 0.85);
    padding: 18px;
    border-radius: 20px;
    width: 100%;
    text-align: center;
    color: white;
    max-width: 300px;
  }
</style>
