---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Evaluation from "../../components/Evaluation.astro";
import Hero from "../../components/Hero.astro";
import HowWeWork from "../../components/HowWeWork.astro";
import ProgramCarousel from "../../components/ProgramCarousel.astro";
import StartPlayerDev from "../../components/StartPlayerDev.astro";
import DevPhilosophy from "../../components/DevPhilosophy.astro";

const pageTitle: string = "A Connected Football Experience";

const tagline: string =
  "Where fundamentals, creativity, and competition live side by side.";

const seo = {
  title: "SouthVan FC | Vancouver Football Club & Development Academy",
  description:
    "SouthVan FC is a community-built club in Vancouver with an Open Men's team and a technical first Development Academy focused on movement and game intelligence.",
  ogImage: "/og/home.png", // optional: make sure this exists in /public/og/home.jpg
};
---

<BaseLayout pageTitle={pageTitle} seo={seo}>
  <Hero
    pageTitle={pageTitle}
    bannerImage={"assets/hero-image.jpg"}
    tagline={tagline}
  >
    <a href="/academy/player-evaluation" slot="cta" class="learn-more-link"
      >Request Player Evaluation</a
    >
  </Hero>
  <DevPhilosophy />
  <HowWeWork />
  <ProgramCarousel />
  <Evaluation />
  <StartPlayerDev />
</BaseLayout>

<style>
  .learn-more-link {
    background-color: rgba(1, 52, 120, 0.85);
    padding: 18px;
    border-radius: 20px;
    width: 100%;
    text-align: center;
    color: white;
    max-width: 300px;
  }
</style>
