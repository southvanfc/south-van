---
import Evaluation from "../../components/homepage/Evaluation.astro";
import Hero from "../../components/homepage/Hero.astro";
import HowWeWork from "../../components/homepage/HowWeWork.astro";
import ProgramCarousel from "../../components/homepage/ProgramCarousel.astro";
import StartPlayerDev from "../../components/homepage/StartPlayerDev.astro";
import BaseLayout from "../../layouts/BaseLayout.astro";
import BannerImage from "../../images/hero-image.jpg";

const pageTitle: string =
  " South Van FC Development Academy | Elite Youth Soccer Training";

const tagline: string =
  "Building confident, skilled, and intelligent soccer players through professional coaching and long-term development.";
---

<BaseLayout pageTitle={pageTitle}>
  <Hero pageTitle={pageTitle} bannerImage={BannerImage} tagline={tagline}>
    <div class="learn-more-div" slot="cta">
      <a href="/academy/player-evaluation" class="link"
        >Request Player Evaluation</a
      >
    </div>
  </Hero>
  <HowWeWork />
  <ProgramCarousel />
  <Evaluation />
  <StartPlayerDev />
</BaseLayout>

<style>
  .learn-more-div {
    background-color: rgba(1, 52, 120, 0.85);
    padding: 18px;
    border-radius: 20px;
    width: 100%;
    text-align: center;
  }
  .link {
    color: white;
    font-size: 18px;
  }
</style>
